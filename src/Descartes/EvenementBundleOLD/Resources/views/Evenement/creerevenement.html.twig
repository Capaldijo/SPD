{% extends "DescartesEvenementBundle::EvenementLayout.html.twig" %}


{% block contentBlock %}




<div class="post excerpt  lino0 removebordertop">
	<header>						
		<h2 class="title">
			<a href="" title="Créer un événement" rel="bookmark">Créer un événement</a>
		</h2>
	</header><!--.header-->		
	
	<form action="{{ path('descartes_evenement_creerevenement') }}" method="post" {{ form_enctype(form) }}>

		{# Les erreurs générales du formulaire. #}
		{{ form_errors(form) }}
		<p>Créez votre événement</p>
		<table>
		
		<tr>
			<td><label>Titre: </label></td>
			<td>{{ form_errors(form.titre) }} {{ form_widget(form.titre) }}</td>
		</tr>

		<tr>
			<td><label>Description: </label></td>
			<td>{{ form_errors(form.description) }} {{ form_widget(form.description) }}</td>
		</tr>

		<tr>
			<td><label>Adresse: </label></td>
			<td>{{ form_errors(form.adresse) }} {{ form_widget(form.adresse) }}</td>
		</tr>

		<tr>
			<td><label>Ville: </label></td>
			<td>{{ form_errors(form.ville) }} {{ form_widget(form.ville) }}</td>
		</tr>

		<tr>
			<td><label>Tarif en €: </label></td>
			<td>{{ form_errors(form.tarif) }} {{ form_widget(form.tarif) }}</td>
		</tr>
		
		<tr>
			<td><label>Theme: </label></td>
			<td>{{ form_errors(form.idThemeev) }} {{ form_widget(form.idThemeev) }}</td>
		</tr>

		<tr>
			<td><label>Date de realisation: </label></td>
			<td>{{ form_errors(form.dateRealisation) }} {{ form_widget(form.dateRealisation) }}</td>
		</tr>

		<tr>
			<td><label>Nombre de participant: </label></td>
			<td>{{ form_errors(form.nombreParticipant) }} {{ form_widget(form.nombreParticipant) }}</td>
		</tr>

		<tr>
			<td><label>Visibilite public: </label></td>
			<td>{{ form_errors(form.visibilite) }} {{ form_widget(form.visibilite) }}</td>
		</tr>

		{{ form_rest(form) }}
		
		</table>
		
		<input type="submit"/>
		
	</form>
			
</div><!--.post excerpt-->





{% endblock %}